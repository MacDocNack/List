<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <ListView Name="ItemView" Width="250" Height="150" Margin="5"/>
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="AddItem" Content="Add" Margin="10,0,10,0" Click="AddItem_Click"/>
                    <Button Name="DeleteItem" Content="Delete" Margin="10,0,10,0" Click="DeleteItem_Click"/>
                    <Button Name="ClearAll" Content="Clear" Margin="10,0,10,0" Click="ClearAll_Click"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
